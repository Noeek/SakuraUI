                                            Background="{x:Null}"
                                            CornerRadius="90"
                                            Width="66"
                                            Height="66">
                                        <Border x:Name="ButtonBackground" 
                                                    Margin="6"
                                                    BorderBrush="{TemplateBinding Foreground}"
                                                    BorderThickness="{StaticResource RoundButtonBorderThickness}"
