                                            </Border>
                                        </Border>
                                    </Grid>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>

                <Button.Projection>
                    <PlaneProjection RotationX="90"/>
                </Button.Projection>
            </Button>

